extends layout

block content
  // SHOWCASE SLIDER
  section#showcase
    #myCarousel.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        li.active(data-target='#myCarousel', data-slide-to='0')
        li(data-target='#myCarousel', data-slide-to='1')
        li(data-target='#myCarousel', data-slide-to='2')
      .carousel-inner
        //- First Slide
        .carousel-item.carousel-image-1.active
          .container
            video(autoplay muted loop preload="auto" poster="img/server.jpeg" id="myVideo")
                source(src="img/rain.mp4" type="video/mp4")
          .my-overflow
            .carousel-caption.d-sm-block.mb-5.text-right
              h4.text-light RichSoft will build applications suitable for each of your ideas
              h1.display-3 Unlock Your Digital Business 
              h1.display-3 Potential
              p.lead.mb-5
                | Share your challenge with our team and we’ll work with you to deliver a revolutionary digital product.
              a.btn.btn-primary.btn-lg.mb-5(href='contact') Estimate Project
        //- Second Slide
        .carousel-item.carousel-image-2
          .container
            video(autoplay muted loop preload="auto" poster="img/server.jpeg" id="myVideo")
                source(src="img/coding.mp4" type="video/mp4")
          .my-overflow
            .carousel-caption.d-sm-block.mb-5
              h4.text-light Web App? Mobile App? E-commerce?
              h1.display-3 Develop Outstanding Products.
              h1.display-3 Fast.
              p.lead RichSoft creates products that let people do things differently. What's your idea?
              a.btn.btn-primary.btn-lg.mb-5(href='#') Estimate Project
        //- Third Slide
        .carousel-item.carousel-image-3
          .container
            video(autoplay muted loop preload="auto" poster="img/server.jpeg" id="myVideo1")
                source(src="img/world.mp4" type="video/mp4")
          .my-overflow-1
            .carousel-caption.d-sm-block.mb-5
              h4.text-light.text-left Software for World
              h1.display-3.mb-5.text-left Deploing Application To Production Environment.
              p.lead.text-left
                | We can help you harness the true power of your data regardless of how it’s stored, and no matter its format.
              .text-left
                a.btn.btn-primary.btn-lg.mb-5(href='#') Estimate Project
      
      // Arrorws
      a.carousel-control-prev(href='#myCarousel', data-slide='prev')
        span.carousel-control-prev-icon.text-primary
      a.carousel-control-next(href='#myCarousel', data-slide='next')
        span.carousel-control-next-icon
  // END SLIDE

  // ICON AREA
  section#home-icons.py-5
    .container
      .row
        .col-md-4.mb-4.text-center.card-deck
          .card.blue
            .card-header.text-primary
              i.fas.fa-desktop.fa-3x.mb-2
              br
              p Web Development
            .card-body
              ul.list-group.list-group-flush
                li.list-group-item Ruby on Rails
                li.list-group-item Node.js
                li.list-group-item React.js
                li.list-group-item PHP
                li.list-group-item Progressive Web App
        .col-md-4.mb-4.text-center.card-deck
          .card.black
            .card-header
              i.fas.fa-mobile-alt.fa-3x.mb-2
              br
              p Mobile Development
            .card-body
              ul.list-group.list-group-flush
                li.list-group-item Android
                li.list-group-item iOS
                li.list-group-item React Native
        .col-md-4.mb-4.text-center.card-deck
          .card.blue
            .card-header.text-primary
              i.fas.fa-pen-fancy.fa-3x.mb-2
              br
              p Product Design
            .card-body
              ul.list-group.list-group-flush
                li.list-group-item Product Design Sprint
                li.list-group-item UX Review
                li.list-group-item Adobe Premiere
                li.list-group-item Adobe Ilustrator
